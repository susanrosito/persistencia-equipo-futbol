<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>
    <class name="Clases.Equipo" table="Equipos" catalog="public">
        <id name="id" type="java.lang.Integer">
            <column name="E_ID" />
            <generator class="sequence" />
        </id>
        <property name="nombre" type="string">
            <column name="E_NOMBRE" length="20" not-null="true" unique="false" />
        </property>
        <many-to-one name="tecnico" cascade="all" ></many-to-one>
    	<set name="jugadores" table="jugador" >
			 <key column="J_ID" ></key>
			 <one-to-many class="Jugador"/>
    	</set>
    </class>
</hibernate-mapping>
