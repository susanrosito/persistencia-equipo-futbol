<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>
    <class name="Clases.Partido" table="Partido" catalog="public">
        <id name="id" type="java.lang.Integer">
            <column name="P_ID" />
            <generator class="sequence" />
        </id>
        <discriminator column="PARTIDO_TIPO" type="string"/>
        
		<many-to-one name="equipoA" cascade="all" ></many-to-one>
		<many-to-one name="equipoB" cascade="all" ></many-to-one>
		<property name="golesEquipoA" type="int">
	            <column name="PS_GOLESEQUIPOA" not-null="true" unique="false" />
        </property>
	    <property name="golesEquipoB" type="int">
	            <column name="PS_GOLESEQUIPOB" not-null="true" unique="false" />
        </property>
        
        
		
		<subclass name="Clases.PartidoSimple" discriminator-value="Simple">
            <one-to-one name="formacionA" cascade="all" ></one-to-one>
            <one-to-one name="formacionB" cascade="all" ></one-to-one>
   		</subclass>
   		
   		<subclass name="Clases.PartidoDeCopa" discriminator-value="Copa">
   		
            <one-to-one name="primerPartido" cascade="all" ></one-to-one>
            <one-to-one name="segundoPartido" cascade="all" ></one-to-one>
            
            <property name="penalesConvertidosEquipoA" type="int">
	            <column name="PC_PENALESEQUIPOA" not-null="true" unique="false" />
        	</property>
        	
        	<property name="penalesConvertidosEquipoB" type="int">
	            <column name="PC_PENALESEQUIPOB" not-null="true" unique="false" />
        	</property>
        	
   		</subclass>
	
        
    </class>
</hibernate-mapping>
